<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        　　<encoder>
                <!-- display detail message for debug    　　　　
                <pattern>%d{yyyy-MM-dd HH:mm:ss} %-4relative [%thread] %-5level %logger{35} : %method - %n %msg %n</pattern>
                -->
                <pattern>%d{yyyy-MM-dd HH:mm:ss} %-4relative [%thread] %-5level %logger{35} - %n %msg %n</pattern>
        　　</encoder>
    　　</appender>
    　　<root level="OFF">
    　　　　<appender-ref ref="STDOUT" />
    　　</root>
</configuration>